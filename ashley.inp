&FORCE_EVAL
  METHOD QS
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    UKS .TRUE.
    &MGRID
      CUTOFF 500
      REL_CUTOFF 60
      NGRIDS 4
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-14
      MAP_CONSISTENT
    &END QS
  &SCF
     SCF_GUESS ATOMIC
     EPS_SCF 1.0E-6
     MAX_SCF 500
     ADDED_MOS  200
     CHOLESKY INVERSE
     &SMEAR  ON
         METHOD FERMI_DIRAC
         ELECTRONIC_TEMPERATURE [K] 700
     &END SMEAR
     &DIAGONALIZATION
          ALGORITHM STANDARD
     &END DIAGONALIZATION
     &MIXING
          METHOD BROYDEN_MIXING
          ALPHA   0.1
          BETA    1.5
          NBROYDEN  8
     &END MIXING
  &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
    &POISSON
      POISSON_SOLVER WAVELET
      PERIODIC NONE
    &END POISSON
  &END DFT
  &SUBSYS
    &CELL
      ABC  40.00000  40.00000  40.00000
      ALPHA_BETA_GAMMA    90.00    90.00    90.00
      PERIODIC NONE
    &END CELL
    &TOPOLOGY
      COORD_FILE_NAME ashley.xyz
      COORDINATE XYZ
&CENTER_COORDINATES
&END CENTER_COORDINATES
    &END TOPOLOGY
    &KIND Zr # Change to either Au or Cu depending on calc
      ELEMENT   Zr # Change to either Au or Cu depending on calc
      BASIS_SET DZVP-MOLOPT-SR-GTH-q12 # Change this number q12 depending on calc
      POTENTIAL GTH-PBE-q12 # Change this number q12 depending on calc
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT ashley
  RUN_TYPE GEO_OPT
  PRINT_LEVEL MEDIUM
&END GLOBAL
&MOTION
  &GEO_OPT
     MAX_FORCE 0.0004
     MAX_ITER 500
     OPTIMIZER BFGS
     TYPE MINIMIZATION
  &END GEO_OPT
&END MOTION
